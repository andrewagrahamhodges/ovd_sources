set -e

# get version
if [ -n "$OVD_VERSION" ]; then
    version="$OVD_VERSION"
else
    version=$(cat VERSION | head -n 1)~dev
fi

sed -e "s/@VERSION@/${version}/g" configure.ac.in > configure.ac

autoreconf -vfi && ./configure --without-ulteo-applets $@

make -C web/media/image -f artwork.mk
python compile_js_css.py

exit 0
